{{!
    @template mod_gwpayments/paymentdetails

    This template will render information about payments for endusers.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * haspayments - Boolean indicator whether or not there are payments
    * payments - Payment info

    Example context (json):
    {
        "haspayments": true,
        "payments": [
                {
                    "timecreated": 0,
                    "expires": true,
                    "timeexpire": 0,
                    "strcost": "EUR 10.00"
                }
            ]
    }

}}
{{#haspayments}}
    <table class="generaltable">
        <thead>
            <tr>
                <th>{{#str}}timecreated, gwpayments{{/str}}</th>
                <th>{{#str}}amount, gwpayments{{/str}}</th>
                <th>{{#str}}timeexpire, gwpayments{{/str}}</th>
            </tr>
        </thead>
        <tbody>
        {{#payments}}
            <tr>
                <th>{{#userdate}}{{timecreated}}, {{#str}}strftimedatetime, langconfig{{/str}}{{/userdate}}</th>
                <th>{{{strcost}}}</th>
                <th>
                    {{#expires}}{{#userdate}}{{timeexpire}}, {{#str}}strftimedatetime, langconfig{{/str}}{{/userdate}}{{/expires}}
                    {{^expires}}-{{/expires}}
                </th>
            </tr>
        {{/payments}}
        </tbody>
    </table>
{{/haspayments}}
{{^haspayments}}
<div style="text-align: center;">
<br><p>{{#str}}no-payment-yet, mod_gwpayments{{/str}}</p>
</div>
{{/haspayments}}
